@using WebGrupo3S.Helpers
@model IList<WebGrupo3S.Models.sp_Busqueda_Usuario_Result>
@{
    ViewBag.Title = "Usuarios";
}
@Styles.Render("~/Admin/plugins/datatables/css")

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body">
                <div>
                    @if (ViewBag.reporte == "1")
                    {
                        <a href="@Url.Action("Report", new { id = "PDF" })">  PDF   <img width="30" height="30" src="~/Images/pdf_flat.png"/></a>  
                        <a href="@Url.Action("Report", new { id = "Excel" })">  EXCEL   <img width="30" height="30" src="~/Images/Excel.png" /></a>
                    }
                </div>
                <table id="datos" class="table table-responsive table-hover table-bordered">
                    <thead style="background-color:lavender">
                        <tr>
                            <th>
                                Codigo
                            </th>
                            <th>
                                Usuario
                            </th>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Estado
                            </th>
                            <th>
                                Empleado
                            </th>
                            <th>
                                Nombre Empleado
                            </th>
                            <th style="background-color:lavender">
                                <div class="pull-right">
                                    @if (ViewBag.nuevo == "1")
                                    {
                                        <a href="@Url.Action("Create", "Usuarios")"><span class="glyphicon glyphicon-plus"></span></a>
                                    }
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodigoUsuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario)
                                </td>
                                <td>
                                    <div class="text-uppercase">@Html.DisplayFor(modelItem => item.NombreUsuario)</div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EstadoUsuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodigoEmpleado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreLargoEmpleado)
                                </td>
                                <td>
                                    @if (ViewBag.editar == "1")
                                    {
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edita", "Edit", "Usuarios", routeValues: new { id = item.CodigoUsuario, empl = item.CodigoEmpleado }, htmlAttributes: new {data_toggle="tooltip", @class = "btn btn-primary btn-xs" })
                                    }
                                    @if (ViewBag.debaja == "1")
                                    {
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "de Baja", "Delete", "Usuarios", routeValues: new { id = item.CodigoUsuario }, htmlAttributes: new { data_modal = "", data_toggle="tooltip" ,@class = "btn btn-info btn-xs" })
                                    }
                                    @if (ViewBag.perfiles == "1")
                                    {
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-user'></span>", "Perfiles", "Perfil", "Usuarios", routeValues: new { id = item.CodigoUsuario, nom = item.NombreUsuario }, htmlAttributes: new {data_toggle="tooltip", @class = "btn btn-primary btn-xs" })
                                    }
                                    @if (ViewBag.resetea == "1")
                                    {
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-lock'></span>", "Resetea contraseña", "Resetea", "Usuarios", routeValues: new { id = item.CodigoUsuario, empl = item.CodigoEmpleado }, htmlAttributes: new { data_modal = "", data_toggle="tooltip", @class = "btn btn-primary btn-xs" })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal_create">

</div>

@section Scripts {
    @Scripts.Render("~/Admin/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
}


