@model WebGrupo3S.Models.Usuario
@{
    ViewBag.Title = "Usuarios";
}
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<link href="~/Content/Combobox.css" rel="stylesheet" />
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Nuevo Registro</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="body" style="width:700px">
        <div class="form-horizontal table-bordered">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.us_usuario, new { htmlAttributes = new { @class = "form-control", style = "width: 150px; background-color:white", placeholder = "", tabindex = 3 } })
                    @Html.ValidationMessageFor(model => model.us_usuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.us_nombre, new { htmlAttributes = new { @class = "form-control", style = "width: 500px", placeholder = "", tabindex = 4 } })
                    @Html.ValidationMessageFor(model => model.us_nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Clave", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.PasswordFor(model => model.us_password, new { @class = "form-control", style = "width: 150px; background-color:white", placeholder = "", tabindex = 5 })
                    @Html.ValidationMessageFor(model => model.us_password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Empleado", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.us_IdEmpleado, new SelectList(ViewBag.EmpleId, "Value", "Text"), htmlAttributes: new { @class = "form-control combobox" })
                    @Html.ValidationMessageFor(model => model.us_IdEmpleado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Usuarios")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i>Crear</button>
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.combobox.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
