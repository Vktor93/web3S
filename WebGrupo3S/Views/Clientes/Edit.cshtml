@model WebGrupo3S.Models.Cliente

@{
    ViewBag.Title = "Clientes";
}
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<link href="~/Content/Combobox.css" rel="stylesheet" />
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Actualiza datos</h3>
</div>

@using (Html.BeginForm())
{
    <div class="body" style="width:700px">
        @Html.AntiForgeryToken()
        <div class="form-horizontal table-bordered" , style="height: 380px; overflow: scroll">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.cl_empresa)
            @Html.HiddenFor(model => model.cl_cliente)
            @Html.HiddenFor(model => model.cl_timestamp)

            <div class="form-group">
                @Html.Label("Tipo Cliente", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.cl_tipoCliente, new SelectList(ViewBag.TC, "Value", "Text"), htmlAttributes: new { @class = "form-control combobox" })
                    @Html.ValidationMessageFor(model => model.cl_tipoCliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Clasificación", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.cl_ClasificacionCliente, new SelectList(ViewBag.CC, "Value", "Text"), htmlAttributes: new { @class = "form-control combobox" })
                    @Html.ValidationMessageFor(model => model.cl_ClasificacionCliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tipo Identificación", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.cl_tipoident, new SelectList(ViewBag.TI, "Value", "Text"), htmlAttributes: new { @class = "form-control combobox" })
                    @Html.ValidationMessageFor(model => model.cl_tipoident, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Identificación", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cl_identifica, new { htmlAttributes = new { @class = "form-control", style = "width: 170px" } })
                    @Html.ValidationMessageFor(model => model.cl_identifica, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nit", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cl_nit, new { htmlAttributes = new { @class = "form-control", style = "width: 100px" } })
                    @Html.ValidationMessageFor(model => model.cl_nit, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Estado civil", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.cl_estadocivil, new SelectList(ViewBag.EC, "Value", "Text"), htmlAttributes: new { @class = "form-control combobox" })
                    @Html.ValidationMessageFor(model => model.cl_estadocivil, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre1", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cl_nombre1, new { htmlAttributes = new { @class = "form-control", style = "width: 300px" } })
                    @Html.ValidationMessageFor(model => model.cl_nombre1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre2", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cl_nombre2, new { htmlAttributes = new { @class = "form-control", style = "width: 300px" } })
                    @Html.ValidationMessageFor(model => model.cl_nombre2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre3", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cl_nombre3, new { htmlAttributes = new { @class = "form-control", style = "width: 300px" } })
                    @Html.ValidationMessageFor(model => model.cl_nombre3, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Apellido1", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cl_apellido1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cl_apellido1, "", new { @class = "text-danger", style = "width: 300px" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Apellido2", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cl_apellido2, new { htmlAttributes = new { @class = "form-control", style = "width: 300px" } })
                    @Html.ValidationMessageFor(model => model.cl_apellido2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Apellido de casada", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cl_apecasada, new { htmlAttributes = new { @class = "form-control", style = "width: 300px" } })
                    @Html.ValidationMessageFor(model => model.cl_apecasada, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Genero", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.cl_genero, new SelectList(ViewBag.GE, "Value", "Text"), htmlAttributes: new { @class = "form-control combobox" })
                    @Html.ValidationMessageFor(model => model.cl_genero, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Fecha Nacimiento", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.cl_fechanac, "Date", new { htmlAttributes = new { @class = "form-control", style = "width: 160px" } })
                    @Html.ValidationMessageFor(model => model.cl_fechanac, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Ocupación", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.cl_ocupacion, new SelectList(ViewBag.OP, "Value", "Text"), htmlAttributes: new { @class = "form-control combobox" })
                    @Html.ValidationMessageFor(model => model.cl_ocupacion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Clientes")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i> Grabar</button>
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.combobox.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
