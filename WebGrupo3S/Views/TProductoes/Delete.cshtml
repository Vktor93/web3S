@model WebGrupo3S.Models.TipoProducto

@{
    ViewBag.Title = "Tipos de productos";
}

<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Esta seguro que desea dar de baja siguiente registro?</h3>
</div>
<div class="body" style="width:700px">
    <dl class="form-horizontal table-bordered">
        <dt>
            @Html.Label("Clasificación")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tp_ClasificacionTP)
        </dd>

        <dt>
            @Html.Label("Nombre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tp_nombre)
        </dd>

        <dt>
            @Html.Label("Descripción")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tp_descripcion)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="footer" style="width:700px">
            <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "TProductoes")'"><i class="glyphicon glyphicon-remove"></i>No</button>
            <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i> Si</button>
        </div>
    }
</div>
