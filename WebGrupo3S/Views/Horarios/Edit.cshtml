@model WebGrupo3S.Models.Horario

@{
    ViewBag.Title = "Horarios";
}
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Actualiza datos</h3>
</div>
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<link href="~/Content/Combobox.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <div class="body" style="width:700px">
        @Html.AntiForgeryToken()

        <div class="form-horizontal table-responsive table-bordered">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ho_empresa)
            @Html.HiddenFor(model => model.ho_IdHorario)
            @Html.HiddenFor(model => model.ho_timestamp)

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_Nombre, new { htmlAttributes = new { @class = "form-control", style = "width: 100px" } })
                    @Html.ValidationMessageFor(model => model.ho_Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_Descripcion, new { htmlAttributes = new { @class = "form-control", style = "width: 200px" } })
                    @Html.ValidationMessageFor(model => model.ho_Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Día", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.ho_diaSemana, new SelectList(ViewBag.dias, "Value", "Text"), htmlAttributes: new { @class = "form-control combobox" })
                    @Html.ValidationMessageFor(model => model.ho_diaSemana, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Entrada", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_HoraEntrada, new { htmlAttributes = new { @class = "form-control", style = "width: 120px" } })
                    @Html.ValidationMessageFor(model => model.ho_HoraSalidaAlmuerzo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Salida almuerzo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_HoraSalidaAlmuerzo, new { htmlAttributes = new { @class = "form-control", style = "width: 120px" } })
                    @Html.ValidationMessageFor(model => model.ho_HoraSalidaAlmuerzo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Entrada almuerzo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_HoraEntradaAlmuerzo, new { htmlAttributes = new { @class = "form-control", style = "width: 120px" } })
                    @Html.ValidationMessageFor(model => model.ho_HoraEntradaAlmuerzo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Salida", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_HoraSalida, new { htmlAttributes = new { @class = "form-control", style = "width: 120px" } })
                    @Html.ValidationMessageFor(model => model.ho_HoraSalida, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Horarios")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i> Grabar</button>
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.combobox.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
