@model WebGrupo3S.Models.Horario
@{
    ViewBag.Title = "Horarios";
}
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Esta seguro que desea dar de baja siguiente registro?</h3>
</div>
<div class="body" style="width:700px">
    <dl class="form-horizontal table-responsive table-bordered">
        <dt>
            @Html.Label("Nombre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ho_Nombre)
        </dd>

        <dt>
            @Html.Label("Descripción")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ho_Descripcion)
        </dd>

        <dt>
            @Html.Label("Entrada")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ho_HoraEntrada)
        </dd>

        <dt>
            @Html.Label("Salida almuerzo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ho_HoraSalidaAlmuerzo)
        </dd>

        <dt>
            @Html.Label("Entrada almuerzo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ho_HoraEntradaAlmuerzo)
        </dd>

        <dt>
            @Html.Label("Salida")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ho_HoraSalida)
        </dd>

    </dl>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Horarios")'"><i class="glyphicon glyphicon-remove"></i>No</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i> Si</button>
    </div>
}
