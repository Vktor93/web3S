@using WebGrupo3S.Helpers
@model IList<WebGrupo3S.Models.sp_Busqueda_Horario_Result>

@{
    ViewBag.Title = "Horarios";
}

@Styles.Render("~/Admin/plugins/datatables/css")
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body">
                <div>
                    @if (ViewBag.reporte == "1")
                    {
                        <a href="@Url.Action("Report", new { id = "PDF" })">  PDF   <img width="30" height="30" src="~/Images/pdf_flat.png" /></a>
                        <a href="@Url.Action("Report", new { id = "Excel" })">  EXCEL   <img width="30" height="30" src="~/Images/Excel.png" /></a>
                    }
                </div>
                <table id="datos" class="table table-responsive table-hover table-bordered">
                    <thead style="background-color:lavender">
                        <tr>
                            <th>
                                Horario
                            </th>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Dia
                            </th>
                            <th>
                                Entrada
                            </th>
                            <th>
                                Salida almuerzo
                            </th>
                            <th>
                                Entrada almuerzo
                            </th>
                            <th>
                                Salida
                            </th>
                            <th style="background-color:lavender">
                                <div class="pull-right">
                                    @if (ViewBag.nuevo == "1")
                                    {
                                        <a href="@Url.Action("Create", "Horarios")"><span class="glyphicon glyphicon-plus"></span></a>
                                    }
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdHorario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreHorario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaSemana)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoraEntrada)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoraSalidaAlmuerzo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoraEntradaAlmuerzo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoraSalida)
                                </td>
                                <td>
                                    @if (ViewBag.editar == "1")
                                    {
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edita", "Edit", "Horarios", routeValues: new { id = item.IdHorario }, htmlAttributes: new { data_modal = "", data_toggle="tooltip", @class = "btn btn-primary btn-xs" })
                                    }
                                    @if (ViewBag.debaja == "1")
                                    {
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "de Baja", "Delete", "Horarios", routeValues: new { id = item.IdHorario }, htmlAttributes: new { data_modal = "",data_toggle="tooltip", @class = "btn btn-info btn-xs" })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Admin/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
}
