@model IList<WebGrupo3S.Models.sp_Busqueda_Documento_Result>

@{
    ViewBag.Title = "Listado de Documentos";
}

@Styles.Render("~/Admin/plugins/datatables/css")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Documentos</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="col-sm-5">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Tipo de Documento
                                </span>
                                @Html.DropDownList("Tdocumento", new SelectList(ViewBag.TD, "Value", "Text"), new { @class = "form-control seleccionar" })
                            </div>                                                                                                                   
                        </div>
                    </div>
                    <div class="col-sm-2 pull-right">
                        <p>
                            @Html.ActionLink("Nuevo Registro", "Create", null, new { @class = "btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>            
        </div>        
    </div>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body">
                <table id="datos" class="table table-responsive table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Tipo
                            </th>
                            <th>
                                Nit
                            </th>
                            <th>
                                Serie
                            </th>
                            <th>
                                Documento
                            </th>
                            <th>
                                Subtotal
                            </th>
                            <th>
                                Descuento
                            </th>
                            <th>
                                Total
                            </th> 
                            <th>
                                Fecha
                            </th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoDocumento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumSerie)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoDocumento)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.Subtotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descuento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaDocumento)
                                </td>
  
                                <td>
                                    @Html.ActionLink("Edita", "Edit", new { id = item.CodigoDocumento }, new { @class = "btn btn-primary btn-xs" })
                                    @Html.ActionLink("de Baja", "Delete", new { id = item.CodigoDocumento }, new { @class = "btn btn-info btn-xs" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Admin/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {

            $(".seleccionar").select2({
                language: {
                    noResults: function () {
                        return "No hay resultado";
                    }
                }
            });

        });
    </script>
}


