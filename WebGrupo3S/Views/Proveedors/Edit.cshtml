@model WebGrupo3S.Models.Proveedor

@{
    ViewBag.Title = "Proveedores";
}
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<link href="~/Content/Combobox.css" rel="stylesheet" />
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Actualiza datos</h3>
</div>

@using (Html.BeginForm())
{
    <div class="body" style="width:700px">
        <div class="form-horizontal table-bordered" , style="height: 380px; overflow: scroll">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.pv_empresa)
            @Html.HiddenFor(model => model.pv_proveedor)
            @Html.HiddenFor(model => model.pv_timestamp)


            <div class="form-group">
                @Html.Label("Tipo proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.pv_tipoProveedor, new SelectList(ViewBag.TP, "Value", "Text"), htmlAttributes: new { @class = "form-control combobox" })
                    @Html.ValidationMessageFor(model => model.pv_tipoProveedor, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre1", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.pv_nombre1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pv_nombre1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre2", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.pv_nombre2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pv_nombre2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nit", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.pv_nit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pv_nit, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Proveedors")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i> Grabar</button>
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.combobox.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
