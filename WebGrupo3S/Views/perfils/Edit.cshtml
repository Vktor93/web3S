@model WebGrupo3S.Models.perfil
@{
    ViewBag.Title = "Perfiles";
}
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Actualiza datos</h3>
</div>

@using (Html.BeginForm())
{
    <div class="body" style="width:700px">
        @Html.AntiForgeryToken()
        <div class="form-horizontal table-bordered">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.pf_empresa)
            @Html.HiddenFor(model => model.pf_codPerfil)
            @Html.HiddenFor(model => model.pf_timestamp)

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-pull-7">
                    @Html.EditorFor(model => model.pf_nomPerfil, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;background-color:White", placeholder = "", tabindex = 2 } })
                    @Html.ValidationMessageFor(model => model.pf_nomPerfil, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-pull-7">
                    @Html.EditorFor(model => model.pf_descPerfil, new { htmlAttributes = new { @class = "form-control", style = "width: 450px", placeholder = "", tabindex = 3 } })
                    @Html.ValidationMessageFor(model => model.pf_descPerfil, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Perfils")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i>Grabar</button>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
