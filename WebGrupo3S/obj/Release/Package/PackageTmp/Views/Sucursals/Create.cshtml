@model WebGrupo3S.Models.Sucursal

@{
    ViewBag.Title = "Sucursales";
}

<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Nuevo Registro</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="body" style="width:700px">
        <div class="form-horizontal table-bordered">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.su_Nombre, new { htmlAttributes = new { @class = "form-control", style = "width: 400px" } })
                    @Html.ValidationMessageFor(model => model.su_Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Encargado", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.su_Encargado, new { htmlAttributes = new { @class = "form-control", style = "width: 100px" } })
                    @Html.ValidationMessageFor(model => model.su_Encargado, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Dirección", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.su_Direccion, new { htmlAttributes = new { @class = "form-control", style = "width: 600px" } })
                    @Html.ValidationMessageFor(model => model.su_Direccion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Teléfono", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.su_Telefono, new { htmlAttributes = new { @class = "form-control", style = "width: 100px" } })
                    @Html.ValidationMessageFor(model => model.su_Telefono, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Sucursals")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i>Crear</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
