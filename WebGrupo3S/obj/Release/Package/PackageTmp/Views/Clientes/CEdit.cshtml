@model WebGrupo3S.Models.Contacto

@{
    ViewBag.Title = "Contactos";
}

<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Actualiza datos</h3>
</div>

@using (Html.BeginForm())
{
    <div class="body" style="width:700px">
        @Html.AntiForgeryToken()
        <div class="form-horizontal table-bordered">
            <h2>@ViewData["asociado"]</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.cn_empresa)
            @Html.HiddenFor(model => model.cn_idContacto)
            @Html.HiddenFor(model => model.cn_tipoAsociado)
            @Html.HiddenFor(model => model.cn_asociado)
            @Html.HiddenFor(model => model.cn_fechaing)
            @Html.HiddenFor(model => model.cn_timestamp)

            <div class="form-group">
                @Html.Label("Tipo de contacto", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.cn_tipoContacto, new SelectList(ViewBag.CO, "Value", "Text"), new { style = "width: 400px; color:black" })
                    @Html.ValidationMessageFor(model => model.cn_tipoContacto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Primer contacto", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.cn_Contacto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cn_Contacto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Segundo contacto", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.cn_Contacto2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cn_Contacto2, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Contactos", "Clientes", new { id = Convert.ToInt16(ViewData["idcliente"]), nom = ViewData["asociado"].ToString() })'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i> Grabar</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}