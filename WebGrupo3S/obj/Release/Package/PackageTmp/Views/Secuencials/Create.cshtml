@model WebGrupo3S.Models.Secuencial

@{
    ViewBag.Title = "Secuencial";
}

<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Nuevo Registro</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="body" style="width:700px">
        <div class="form-horizontal table-bordered">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Base de datos", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.sc_DataBase,
                    new List<SelectListItem>
                    {
                    new SelectListItem { Value = "SSS_COMPLEMENTOS" , Text = "COMPLEMENTOS" },
                    new SelectListItem { Value = "SSS_OPERACION" , Text = "OPERACIÓN" },
                    new SelectListItem { Value = "SSS_PERSONAS" , Text = "PERSONAS" },
                    new SelectListItem { Value = "SSS_PLANILLA" , Text = "PLANILLA" }
                    }, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sc_Centralizado, "", new { @class = "text-danger" })
                </div>
                @Html.ValidationMessageFor(model => model.sc_DataBase, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Nombre de tabla", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.sc_tabla, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sc_tabla, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Centralizado", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.sc_Centralizado,
                        new List<SelectListItem>
                        {
                        new SelectListItem { Value = "0" , Text = "No" },
                        new SelectListItem { Value = "1" , Text = "Si" }
                        }, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.sc_Centralizado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Secuencials")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i>Crear</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
