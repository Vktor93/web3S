@model WebGrupo3S.Models.perfilusuario

@{
    ViewBag.Title = "Perfil de Usuario";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal table-responsive col-md-7 box-body bg-aqua-active table-bordered">
        <h4>Nuevo registro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.pu_codUsuario, new SelectList(ViewBag.UserId, "Value", "Text"), new { style = "width: 300px; color:black" })
                @Html.ValidationMessageFor(model => model.pu_codUsuario, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Perfil", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.pu_codPerfil, new SelectList(ViewBag.PerfilId, "Value", "Text"), new { style = "width: 300px; color:black" })
                @Html.ValidationMessageFor(model => model.pu_codPerfil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Crear" class="btn btn-default btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retorna a lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
