@model WebGrupo3S.Models.Horario

@{
    ViewBag.Title = "Horarios";
}
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Nuevo Registro</h3>
</div>
@using (Html.BeginForm())
{
    <div class="body" style="width:700px; height: 380px; overflow: scroll">
        @Html.AntiForgeryToken()

        <div class="form-horizontal table-bordered">
            <h4>Nuevo registro</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_Nombre, new { htmlAttributes = new { @class = "form-control", style = "width: 100px" } })
                    @Html.ValidationMessageFor(model => model.ho_Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_Descripcion, new { htmlAttributes = new { @class = "form-control", style = "width: 200px" } })
                    @Html.ValidationMessageFor(model => model.ho_Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Día", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.ho_diaSemana, new SelectList(ViewBag.dias, "Value", "Text"), new { style = "width: 100px; color:black" })
                    @Html.ValidationMessageFor(model => model.ho_diaSemana, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Entrada", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_HoraEntrada, "Time", new { htmlAttributes = new { @class = "form-control", style = "width: 120px" } })
                    @Html.ValidationMessageFor(model => model.ho_HoraEntrada, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Salida almuerzo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_HoraSalidaAlmuerzo, "Time", new { htmlAttributes = new { @class = "form-control", style = "width: 120px" } })
                    @Html.ValidationMessageFor(model => model.ho_HoraSalidaAlmuerzo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Salida almuerzo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_HoraEntradaAlmuerzo, "Time", new { htmlAttributes = new { @class = "form-control", style = "width: 120px" } })
                    @Html.ValidationMessageFor(model => model.ho_HoraEntradaAlmuerzo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Salida", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ho_HoraSalida, "Time", new { htmlAttributes = new { @class = "form-control", style = "width: 120px" } })
                    @Html.ValidationMessageFor(model => model.ho_HoraSalida, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Horarios")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i>Crear</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
