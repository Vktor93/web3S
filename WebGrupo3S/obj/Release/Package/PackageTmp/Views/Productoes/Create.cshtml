@model WebGrupo3S.Models.Producto

@{
    ViewBag.Title = "Producto";
}
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Nuevo Registro</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="body" style="width:700px">
        <div class="form-horizontal table-bordered">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("Tipo Producto", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.pr_TipoProducto, new SelectList(ViewBag.Tprod, "Value", "Text"), new { style = "width: 150px; color:black" })
                    @Html.ValidationMessageFor(model => model.pr_TipoProducto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.pr_nombre, new { htmlAttributes = new { @class = "form-control", style = "width: 200px" } })
                    @Html.ValidationMessageFor(model => model.pr_nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.pr_descripcion, new { htmlAttributes = new { @class = "form-control", style = "width: 400px" } })
                    @Html.ValidationMessageFor(model => model.pr_descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Codigo Barras", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.pr_CodigoBarras, new { htmlAttributes = new { @class = "form-control" }, style = "width: 100px" })
                    @Html.ValidationMessageFor(model => model.pr_CodigoBarras, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Codigo SAP", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.pr_CodigoSAP, new { htmlAttributes = new { @class = "form-control" }, style = "width: 100px" })
                    @Html.ValidationMessageFor(model => model.pr_CodigoSAP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Marca", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.pr_IdMarca, new SelectList(ViewBag.MA, "Value", "Text"), new { style = "width: 150px; color:black" })
                    @Html.ValidationMessageFor(model => model.pr_IdMarca, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Productoes")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i>Crear</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
