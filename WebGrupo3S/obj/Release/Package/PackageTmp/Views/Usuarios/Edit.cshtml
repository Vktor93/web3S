@model WebGrupo3S.Models.Usuario
@{
    ViewBag.Title = "Usuarios";
}
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Actualiza datos</h3>
</div>

@using (Html.BeginForm())
{
    <div class="body" style="width:700px">
        @Html.AntiForgeryToken()
        <div class="form-horizontal table-bordered">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.us_codUsuario)
            @Html.HiddenFor(model => model.us_estUsuario)
            @Html.HiddenFor(model => model.us_timestamp)

            <div class="form-group">
                @Html.Label("Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.us_usuario, new { htmlAttributes = new { @class = "form-control", style = "width: 150px" } })
                    @Html.ValidationMessageFor(model => model.us_usuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.us_nombre, new { htmlAttributes = new { @class = "form-control", style = "width: 500px" } })
                    @Html.ValidationMessageFor(model => model.us_nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Empleado", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.us_IdEmpleado, new SelectList(ViewBag.EmpleId, "Value", "Text"), new { style = "width: 400px; color:black" })
                    @Html.ValidationMessageFor(model => model.us_IdEmpleado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>    
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Usuarios")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i> Grabar</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
