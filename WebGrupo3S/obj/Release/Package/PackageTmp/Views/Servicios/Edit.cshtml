@model WebGrupo3S.Models.Servicio

@{
    ViewBag.Title = "Servicios";
}

<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Actualiza datos</h3>
</div>

@using (Html.BeginForm())
{
    <div class="body" style="width:700px">
        <div class="form-horizontal table-bordered">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.sv_empresa)
            @Html.HiddenFor(model => model.sv_IdServicio)
            @Html.HiddenFor(model => model.sv_timestamp)

            <div class="form-group">
                @Html.Label("Tipo Servicio", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.sv_TipoServicio, new SelectList(ViewBag.Tserv, "Value", "Text"), new { style = "width: 150px; color:black" })
                    @Html.ValidationMessageFor(model => model.sv_TipoServicio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.sv_nombre, new { htmlAttributes = new { @class = "form-control", style = "width: 200px" } })
                    @Html.ValidationMessageFor(model => model.sv_nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.sv_descripcion, new { htmlAttributes = new { @class = "form-control", style = "width: 400px" } })
                    @Html.ValidationMessageFor(model => model.sv_descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Duración", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.sv_duracionServicio, "Int", new { htmlAttributes = new { @class = "form-control", style = "width: 80px" } })
                    @Html.ValidationMessageFor(model => model.sv_duracionServicio, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Index", "Servicios")'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" id="myFormSubmit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i> Grabar</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
