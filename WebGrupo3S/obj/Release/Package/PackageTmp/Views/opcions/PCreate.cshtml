@model WebGrupo3S.Models.opcion

@{
    ViewBag.Title = "Opciones";
}
<div class="header">
    <h3 class="bg-light-blue-gradient" style="color:white; width:700px; height:40px; text-align:center">Nuevo Registro</h3>
</div>
@using (Html.BeginForm("PCreate", "opcions", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="body" style="width:700px">
        <div class="form-horizontal table-bordered">
            <h2>@ViewData["nombre"]</h2>
            @Html.HiddenFor(model => model.op_PadreOpcion)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.op_NombreOpcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.op_NombreOpcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.op_DescOpcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.op_DescOpcion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="footer" style="width:700px">
        <button class="btn btn-info btn-xs" type="button" onclick="location.href='@Url.Action("Details", "opcions", new { id =  ViewBag.idpadre, nom = ViewBag.nombre })'"><i class="glyphicon glyphicon-remove"></i>Cancela</button>
        <button type="submit" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-ok"></i>Crear</button>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}