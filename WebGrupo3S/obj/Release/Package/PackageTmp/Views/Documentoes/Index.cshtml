@model IList<WebGrupo3S.Models.sp_Busqueda_Documento_Result>

<p>
    @Html.ActionLink("Nuevo Registro", "Create", null, new { @class = "btn btn-primary" })
</p>

@{
    ViewBag.Title = "Documento";
}

@Styles.Render("~/Admin/plugins/datatables/css")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal table-responsive col-md-8 box-body bg-aqua-active table-bordered">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Tipo de documento", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-5">
                @Html.DropDownList("Tdocumento", new SelectList(ViewBag.TD, "Value", "Text"), new { style = "width: 150px; color:black" })
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body">
                <table id="datos" class="table table-responsive table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Tipo
                            </th>
                            <th>
                                Nit
                            </th>
                            <th>
                                Serie
                            </th>
                            <th>
                                Documento
                            </th>
                            <th>
                                Subtotal
                            </th>
                            <th>
                                Descuento
                            </th>
                            <th>
                                Total
                            </th> 
                            <th>
                                Fecha
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoDocumento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumSerie)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoDocumento)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.Subtotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descuento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaDocumento)
                                </td>
  
                                <td>
                                    @Html.ActionLink("Edita", "Edit", new { id = item.CodigoDocumento }, new { @class = "btn btn-primary btn-xs" })
                                    @Html.ActionLink("de Baja", "Delete", new { id = item.CodigoDocumento }, new { @class = "btn btn-info btn-xs" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Admin/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
    @Scripts.Render("~/bundles/jqueryval")
}

